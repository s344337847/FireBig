<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mynews_item_option_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/item_option_menu_delete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:background="@drawable/mynews_item_otion_menu_delete_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delete_black_24dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_option_menu_cancle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/choose_camera"
        android:layout_centerVertical="true"
        android:layout_marginEnd="53dp"
        android:background="@drawable/mynews_item_option_menu_cancle_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_clear_red_24dp"
            android:gravity="center" />
    </LinearLayout>
</RelativeLayout>
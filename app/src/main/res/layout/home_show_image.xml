<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_h_i_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.PinchImageView.PinchImageView
            android:id="@+id/home_show_hightimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside" />
        <!--  fresco:viewAspectRatio="1"
             fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@drawable/header"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:progressBarImage="@drawable/ic_hdr_strong_black_24dp"
            fresco:progressBarImageScaleType="centerInside"-->

        <ProgressBar
            android:id="@+id/home_show_large_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>
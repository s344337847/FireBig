<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/root_view"
    tools:context="com.firebig.activity.Activity_Wellcome">


    <ImageView
        android:id="@+id/well_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="50dp"
        android:src="@drawable/show_welcome" />

    <ImageView
        android:id="@+id/well_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/well_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/header" />

    <Button
        android:id="@+id/well_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_btn_bg"
        android:text="@string/btn_login"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/well_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/well_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/register_btn_bg"
        android:text="@string/btn_register"
        android:visibility="gone"
        android:textColor="@color/login_btn_color"
        android:textSize="18sp"/>

</RelativeLayout>

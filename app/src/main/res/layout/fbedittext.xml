<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/fbedittext_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/login_hint_txt"
            android:textColor="@color/crop__button_text"
            android:textSize="18sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/fbedittext_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColorHint="@color/crop__button_text" />

        <ImageView
            android:id="@+id/fbedittext_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/fbedittext_input"
            android:layout_centerVertical="true"
            android:src="@drawable/fbedittext_delete"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>